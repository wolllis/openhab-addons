	</thing-type>

<!-- Eltako Bridge -->
    <bridge-type id="bridge">
    
        <label>Eltako Gateway</label>
        
        <description>Eltako gateway device which uses serial interface for data transfer</description>
        
        <!-- Config-Descriptions are shown to the user and (must/can) be set upon thing creation -->
        <config-description>
            <parameter name="SerialComPort" type="text" required="true">
                <label>Serial Comport Number</label>
                <description>e.g. "COM1" under Windows or "/dev/ttyUSB0" under Linux</description>
            </parameter>
        </config-description>
    </bridge-type>
	
    <channel-type id="DimmingSpeed" advanced="false">
        <item-type>Number</item-type>
        <label>Dimming Speed</label>
        <category>Light</category>
        <state min="0" max="255" step="1" pattern="%d" readOnly="false" />
    </channel-type>
    
    <channel-type id="switchState">
        <item-type>Switch</item-type>
        <label>Switch State</label>
        <description>On/off status of the switch</description>
        <category>Switch</category>
    </channel-type>
</thing:thing-descriptions>
